<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyCustomTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textStyle">normal</item>
    </style>>
    <style name="customImageBorder">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="floatText">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:fontWeight">700</item>
    </style>
    <style name="customDropDown">
        <item name="android:textSize" >13sp</item>
    </style>

    <style name="purposeStyle1">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/custom_purpose</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingHorizontal">13dp</item>
    </style>
    <style name="purposeStyle2">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:background">@drawable/custom_purpose2</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>

