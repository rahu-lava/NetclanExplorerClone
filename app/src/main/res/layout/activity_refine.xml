<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RefineActivity">

    <include
        android:id="@+id/include2"
        layout="@layout/refine_header"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryColor"
        android:text="Select your Availbility"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="7dp"
        android:layout_below="@+id/include2"/>


<LinearLayout
    android:id="@+id/linearlayout3"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="25dp"
    android:layout_below="@id/textView14"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_edittext2"
    android:layout_marginBottom="15dp"
    >
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        />
</LinearLayout>


    <TextView
        android:textColor="@color/primaryColor"
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Your Status"
        android:layout_below="@id/linearlayout3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"

        android:textSize="15sp"
        android:paddingTop="5dp"
        android:paddingHorizontal="15dp"
        android:paddingBottom="30dp"
        android:background="@drawable/custom_edittext"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="25dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text='Hi Community! I am open to new Connection "ðŸ˜Š" ' />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/editTextText2"
        >

        <TextView
            android:id="@+id/charCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:layout_weight="1"
            android:text="47" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:layout_weight="1"
            android:text="/250" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextText2"
        android:layout_marginTop="20dp"
        android:textColor="@color/primaryColor"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:text="Select hyper local Distance" />


    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="slider"
        android:layout_marginHorizontal="17dp"
        android:labelFor="@id/textView15"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        app:labelBehavior="visible"
        android:stepSize="1"
        app:tickVisible="false"
        android:value="50"
        android:valueFrom="0"
        android:valueTo="100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="-15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:layout_weight="1"
            android:text="1 Km" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:textColor="@color/primaryColor"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="100 Km" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider"
        android:layout_marginTop="30dp"
        android:textColor="@color/primaryColor"
        android:layout_marginStart="25dp"
        android:text="Select Purpose" />

    <LinearLayout
        android:id="@+id/linearlayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView22"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/textView23"
            style="@style/purposeStyle1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee" />

        <TextView
            android:id="@+id/textView24"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/purposeStyle2"
            android:text="Business" />

        <TextView
            android:id="@+id/textView25"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            style="@style/purposeStyle2"
            android:layout_height="wrap_content"
            android:text="Hobbies" />

        <TextView
            android:id="@+id/textView26"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            style="@style/purposeStyle2"
            android:layout_height="wrap_content"
            android:text="Friendship" />

        <TextView
            android:id="@+id/textView27"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            style="@style/purposeStyle2"
            android:layout_height="wrap_content"
            android:text="Movies" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout5"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/linearlayout4"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/purposeStyle2"
            android:text="Dinning" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            style="@style/purposeStyle1"
            android:layout_height="wrap_content"
            android:text="Dating" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            style="@style/purposeStyle2"
            android:layout_height="wrap_content"
            android:text="Matrimony" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/custom_button"
        android:textSize="13sp"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:paddingHorizontal="75dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearlayout5"
        android:text="Save &amp; Explore" />



</RelativeLayout>